body {
  margin: 0;
  overflow: hidden;
}

#lakkha {
  position: absolute;
  width: 10%;
  height: 10%;
  background-image: url('assets/lakkha.png');
  background-size: cover;
  transition: transform 0.1s;
  z-index: 1;

}

#background {
  background: linear-gradient(rgba(20, 26, 35, 0.55), rgba(20, 26, 35, 0.55)),
    url("assets/forest.jpeg");
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  background-size: cover;
  font-family: 'Play', sans-serif;
  margin: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -5;
}

.flex-container {
  align-items: center;
  justify-content: center;
  text-align: center;
  display: flex;
}

.flex-child {
  flex: 1;
  text-decoration: none;
  margin-top: 150px;
}

.flex-child store {
  margin-right: 20px;
}

.img1 {
  width: 400px;
}

img1:hover {
  -webkit-transform: scale(1.1);
  -ms-transform: scale(1.1);
  transform: scale(1.1);
}

img:hover {
  -webkit-transform: scale(1.1);
  -ms-transform: scale(1.1);
  transform: scale(1.1);
}

.img {
  width: 400px;
}